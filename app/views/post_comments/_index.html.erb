<% post_comments.each do |post_comment| %>
  <tr>
    <td>
      <%= link_to user_path(post_comment.user) do %>
        <%= attachment_image_tag(post_comment.user, :user_image, :fill, 100, 100, fallback: "no_image.jpg") %><br>
        <%= post_comment.user.name %>
      <% end %>
    </td>
    <td>
      <%= post_comment.comment %>
    </td>
    <td>
    <% if post_comment.user == current_user %>
      <%= link_to "Destroy", post_post_comment_path(post_comment.post_id, post_comment), method: :delete, class:"btn btn-danger" %>
    <% end %>
    </td>
  </tr>
<% end %>
